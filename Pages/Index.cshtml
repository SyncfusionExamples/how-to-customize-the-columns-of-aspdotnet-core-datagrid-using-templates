@page
@model IndexModel
@using Syncfusion.EJ2
@{
    ViewData["Title"] = "Home page";
    var employee = Employee.GetAllRecords();
}

<ejs-grid id="Grid" dataSource="@employee" width="85%">
    <e-grid-columns>
        <e-grid-column headerText="Employee Image" textAlign=Center template="#datatemplate" width="120"></e-grid-column>
        <e-grid-column field="EmployeeID" textAlign="Right" headerTemplate="#employeetemplate" width="120"></e-grid-column>
        <e-grid-column field="FirstName" headerText="Name" width="150"></e-grid-column>
        <e-grid-column field="Title" headerText="Title" width="150"></e-grid-column>
        <e-grid-column field="HireDate" headerTemplate="#datetemplate" format="yMd" width="130"></e-grid-column>
        <e-grid-column field="Phone" headerText="Phone" width="120"></e-grid-column>
        <e-grid-column field="Country" headerText="Country" width="70"></e-grid-column>
        <e-grid-column headerText="Active" template="#conditionaltemplate" textAlign=Center width="120"></e-grid-column>
    </e-grid-columns>
</ejs-grid>

<style>
    @@font-face {
        font-family: 'ej2-headertemplate';
        src: url(data:application/x-font-ttf;charset=utf-8;base64,) format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    .e-grid .e-icon-userlogin::before {
        font-family: 'ej2-headertemplate';
        content: '\e702';
    }

    .e-grid .e-icon-calendar::before {
        font-family: 'ej2-headertemplate';
        content: '\e960';
    }

    .image img {
        height: 55px;
        width: 55px;
        border-radius: 50px;
        box-shadow: inset 0 0 1px #e0e0e0, inset 0 0 14px rgba(0, 0, 0, 0.2);
    }
</style>

<script id="datatemplate" type="text/x-template">
    <div class="image">
        <img src="@Url.Content("~/Images/data-grid/${EmployeeID}.png")"/>
    </div>
</script>

<script id="conditionaltemplate" type="text/x-template">
    <div>
        ${if(Discontinued)}
            <input type="checkbox" checked> ${else}
            <input type="checkbox">
        ${/if}
    </div>    
</script>

<script id="employeetemplate" type="text/x-template">
    <span class="e-icon-userlogin"> Employee ID </span>
</script>

<script id="datetemplate" type="text/x-template">
    <span class="e-icon-calendar"> Date Joined </span>
</script>




